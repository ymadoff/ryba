# Starts a Hive Server 2
#
# chkconfig: 345 85 15
# description: Hive Server 2
#
### BEGIN INIT INFO
# Provides:          hive-server2
# Short-Description: Hive Server 2
# Default-Start:     3 4 5
# Default-Stop:      0 1 2 6
# Required-Start:    $syslog $remote_fs
# Required-Stop:     $syslog $remote_fs
# Should-Start:
# Should-Stop:
### END INIT INFO

NAME='Hive Server2'
USER='{{hive.user.name}}'
GROUP='{{hive.group.name}}'
RUN_DIR='{{hive.server2.pid_dir}}'
PID_FILE="${RUN_DIR}/hive-server2.pid"
CONF_DIR={{hive.server2.conf_dir}}
CMD="su -l $USER -c \"nohup /usr/hdp/current/hive-server2/bin/hive --config ${CONF_DIR} --service hiveserver2 >{{hive.server2.log_dir}}/hiveserver2.out 2>{{hive.server2.log_dir}}/hiveserver2.log & echo \\\$! >$PID_FILE\""
KILL_FORCE=0
KILL_SLEEP=10

function start {
  if [ -f "${PID_FILE}" ]; then
    pid=`cat $PID_FILE 2>/dev/null`
    if kill -0 $pid >/dev/null 2>&1 $pid; then
       echo "$NAME already running [$pid]"
       exit 0
    else
      rm -rf $PID_FILE 2>/dev/null
    fi
  fi
  eval $CMD
  echo "$NAME running [`cat $PID_FILE`]"
}

function stop {
  if [ ! -f "${PID_FILE}" ]; then
    echo "$NAME already stopped"
    return
  fi
  pid=$(<$PID_FILE)
  kill -15 $pid 2>/dev/null
  i=0
  while kill -0 $pid 2>/dev/null && [ $i -lt $KILL_SLEEP ]; do
    (( i++ ))
    sleep 1
  done
  if ! kill -0 $pid 2>/dev/null; then
    rm $PID_FILE 2>/dev/null || true
    echo "$NAME stopped"
    return
  fi
  force_stop
}

function force_stop {
  pid=$(<$PID_FILE)
  kill -9 $pid 2>/dev/null
  sleep 1
  if kill -0 $pid 2>/dev/null; then
    echo "$NAME failed to stop"
    exit 1
  fi
  rm $PID_FILE 2>/dev/null
  echo "$NAME forced stopped after ${KILL_SLEEP}s"
}

function status {
  if [ -f "${PID_FILE}" ]; then
    pid=`cat $PID_FILE`
    if kill -0 $pid >/dev/null 2>&1; then
       echo "$NAME started [$pid]"
       exit 0
    fi
  fi
  echo "$NAME stopped"
  exit 3
}

if [[ $1 == "start" ]]; then
  start "$@"
elif [[ $1 == "stop" ]]; then
  stop "$@"
elif [[ $1 == "restart" ]]; then
  stop "$@"
  sleep 1
  start "$@"
elif [[ $1 == "status" ]]; then
  status "$@"
else
  N=/etc/init.d/$NAME
  echo "Usage: $N {start|stop|restart|status}" >&2
fi
